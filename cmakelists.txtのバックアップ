cmake_minimum_required(VERSION 3.1.6)
project(example VERSION 0.1.0)

# コンパイラーの指定
set(CMAKE_CXX_STANDARD 17)

include(CTest)
enable_testing()

set(CPACK_PROJECT_NAME ${PROJECT_NAME})
set(CPACK_PROJECT_VERSION ${PROJECT_VERSION})
include(CPack)

# コンパイラー Option
set(CMAKE_CXX_FLAGS "-O1 -Wall")
set(CMAKE_CXX_FLAGS_DEBUG "-O0 -g")
set(CMAKE_CXX_FLAGS_RELEASE "-O2")
set(CMAKE_CXX_FLAGS_MINSIZEREL "-Os")
set(CMAKE_CXX_FLAGS_RELWITHDEBINFO "-Og -g")

# PyBind11 を取得
## apt install pybind11-devをしておく
set(pybind11_DIR "/usr/include/pybind11")
find_package(pybind11 REQUIRED)
# Pythonのパスを探索
set(Python_VIRTUALENV FIRST)
set(Python_EXECUTABLE "/home/terms/bin/FACE01/bin/python3")
find_package(Python REQUIRED)
message(${Python_FOUND})
message(${Python_EXECUTABLE})

# -I : インクルードパス
include_directories(/usr/include)
include_directories(/usr/include/pybind11)
include_directories(/usr/include/python3.8)

# -L : ライブラリ探索パス
link_directories(/home/terms/bin/FACE01/lib)

# 作成する実行ファイル名とソースファイル
pybind11_add_module(cal_specify_date cal_specify_date.cpp)



# コンパイラー Option
set(CMAKE_CXX_FLAGS "-O1 -Wall")
set(CMAKE_CXX_FLAGS_DEBUG "-O0 -g")
set(CMAKE_CXX_FLAGS_RELEASE "-O2")
set(CMAKE_CXX_FLAGS_MINSIZEREL "-Os")
set(CMAKE_CXX_FLAGS_RELWITHDEBINFO "-Og -g")

# Pythonのパスを探索
find_package(Python REQUIRED)
message(${Python_FOUND})
message(${Python_EXECUTABLE})
# PyBind11 を取得
## apt install pybind11-devをしておく
set(pybind11_DIR "/usr/include/pybind11")
find_package(pybind11 REQUIRED)

# -I : インクルードパス
include_directories(/usr/include)
include_directories(/usr/include/pybind11)
include_directories(/usr/include/python3.8)



# -L : ライブラリ探索パス
link_directories(/home/terms/bin/FACE01/lib)

# 作成する実行ファイル名とソースファイル
pybind11_add_module(cal_specify_date cal_specify_date.cpp)